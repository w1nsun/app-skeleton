{% extends 'AdminBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- iCheck -->
    <link href="/assets/admin/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>{{ 'Users'|trans }}</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="{{ 'Search for...'|trans }}">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">{{ 'Go!'|trans }}</button>
                    </span>
                </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                <tr class="headings">
                                    <th>
                                        <input type="checkbox" id="check-all" class="flat">
                                    </th>
                                    <th class="column-title">{{ 'ID'|trans }} </th>
                                    <th class="column-title">{{ 'Username'|trans }} </th>
                                    <th class="column-title">{{ 'Email'|trans }} </th>
                                    <th class="column-title no-link last"><span class="nobr">{{ 'Action'|trans }}</span>
                                    </th>
                                    <th class="bulk-actions" colspan="7">
                                        <a class="antoo" style="color:#fff; font-weight:500;">{{ 'Bulk Actions'|trans }} ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                    </th>
                                </tr>
                                </thead>

                                <tbody>
                                    {% for user in users %}
                                        <tr class="{% if loop.index is even %}even{% else %}odd{% endif %} pointer">
                                            <td class="a-center ">
                                                <input type="checkbox" class="flat" name="table_records">
                                            </td>
                                            <td class=" ">{{ user.id }} </td>
                                            <td class=" ">{{ user.username }} </td>
                                            <td class=" ">{{ user.email }} </td>
                                            <td class=" last"><a href="#">{{ 'View'|trans }}</a></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- iCheck -->
    <script src="/assets/admin/vendors/iCheck/icheck.min.js"></script>
{% endblock %}
